<Window x:Class="MatulloEsercitazioneApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MatulloEsercitazioneApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="950" Width="800">
    <StackPanel>
        <DataGrid x:Name="dgElenco" Height="300"></DataGrid>

        <Button x:Name="btnLeggifile" Content="Leggi dal file" Click="btnLeggifile_Click"/>
        <Label x:Name="lblInseriscititolo" Content="Inserisci il nome dell'atleta"/>


        <TextBox x:Name="txtNome" Margin=" 10" ></TextBox>
        <Label x:Name="lblInserisciCittà" Content="Inserisci la città"/>

        <TextBox x:Name="txtCittà" Margin=" 10" ></TextBox>

        <Label x:Name="lblTempoInminuti" Margin="10"/>

        <Button x:Name="btnTempoInMinuti" Content="Trova il tempo in minuti" Margin="10" Click="btnTempoInMinuti_Click"/>


        <Label x:Name="lblPartecipantiChiesti" Margin="10" Content="Inserisci La città"/>

        <TextBox x:Name="txtCittàInserita" Margin=" 10" ></TextBox>


        <Label x:Name="lblCittàPArtecipanti" Margin="10" />
        <Button x:Name="btnTrovaPersone" Content="Trtova Atleti" Margin="10" Click="btnTrovaPersone_Click"/>






    </StackPanel>
</Window>
